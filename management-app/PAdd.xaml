<Window x:Class="management_app.PAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:management_app"
        mc:Ignorable="d"
        Title="PAdd" Height="450" Width="800">
    <StackPanel>
        <Label Name="lblBarcode">Barcode:</Label>
        <TextBox Name="txtBarcode" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"></TextBox>
        <Label Name="lblName">Product name:</Label>
        <TextBox Name="txtPName" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"></TextBox>
        <Label Name="lblPrice">Price:</Label>
        <TextBox Name="txtPrice" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"></TextBox>
        <Label Name="lblQty">Quantity:</Label>
        <TextBox Name="txtQty" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"></TextBox>
        <Label Name="lblCate">Category</Label>
        <ComboBox Name="cbCatagory">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding CNAME}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Name="btnAddPro" Content="OK" Click="BtnNewPro_Click"/>
    </StackPanel>
</Window>
