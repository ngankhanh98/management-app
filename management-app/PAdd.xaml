<Window x:Class="management_app.PAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:management_app"
        mc:Ignorable="d"
        Title="PAdd" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="lblBarcode" Content="Barcode:"/>
        <TextBox x:Name="txtBarcode" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"/>
        <Label x:Name="lblName" Content="Product name:"/>
        <TextBox x:Name="txtPName" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"/>
        <Label x:Name="lblPrice" Content="Price:"/>
        <TextBox x:Name="txtPrice" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"/>
        <Label x:Name="lblQty" Content="Quantity:"/>
        <TextBox x:Name="txtQty" TextWrapping="Wrap" Text="Hello" AcceptsReturn="True"/>
        <Label x:Name="lblCate" Content="Category"/>
        <ComboBox x:Name="cbCatagory">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding CNAME}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="btnAddPro" Content="OK" Click="BtnNewPro_Click"/>
    </StackPanel>
</Window>
